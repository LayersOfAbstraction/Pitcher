@model Pitcher.Models.Registration
@{
    ViewData["Title"] = "Registrations";
}   
<h1>Registrations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="registrationTable" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts{ 
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script>    
        var oTable = $('#registrationTable').DataTable({
            "ajax": {
                type: "get",
                'dataType': "json",
                "url": "@Url.Action("LeftJoinJobsAndUsersOntoRegistrations")",
                "dataSrc": function (result) {
                    return result;
                    }
            },
            "columns": [
                { "data": "RegistrationDate"},
                { "data": "User"},
                { "data": "Job"},
                {
                    "data": null,
                    "render": function (value) {
                        return '<a href="/Registrations/Details/' + value.ID + '"button type="button" class="btn btn-primary btn-block">Details</a> <br> '
                            
                            + '<a href="/Registrations/Edit/' + value.ID + '"button type="button" class="btn btn-info btn-block">Edit </a> <br> ' 
                            
                            + '<a href="/Registrations/Delete/' + value.ID + '"button type="button" class="btn btn-primary btn-block">Delete</a>';
                    }
                }
                ]
        });
    </script>
}