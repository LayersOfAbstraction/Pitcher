@model Pitcher.Models.User

@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserContactEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserContactEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserPhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserPhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserPostCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserPostCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserCountry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserCountry)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserMobileNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserMobileNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registrations)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Job Title</th>
                    <th>Registration Date</th>
                    <th>Job Complete</th>
                </tr>
                @* Shows all Jobs for User *@
                @foreach (var item in Model.Registrations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Job.JobTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Job.JobIsComplete)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
